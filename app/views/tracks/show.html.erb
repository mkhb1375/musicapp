<style>
.pages:before{
  /* background-image:url("<%= asset_path('33.jpg') %>"); */
 
   
  background-size: cover;
    background-repeat:repeat-y;
}
</style>

<% if @cover%>
   
<% temp =  @height%>
<% temp = 2500 / temp%>

<style>
.pages:before{

  filter: blur(<%= temp %>px);
  -webkit-filter: blur(<%= temp %>px);
  background-image:url("<%= @cover %>");
}
</style>

<% end%>


<%= stylesheet_link_tag "/app/stylesheets/track_show.css" %>

<div class="pages">

    <div class="band_index">


    <div class="links">
          <a href="<%= bands_url %>">Bands</a>
          /
          <a href="<%= band_url(@band.id) %>"><%=@band.name%></a>
          /
          <a href="<%= band_album_url(@album.id) %>"><%=@album.title%></a>
          /
          <a href="<%= track_url(@track.id) %>"><%=@track.title%></a>

          <br>
         
    </div>
          <h4><%= @track.ord %>-<%= @track.title %></h4>

                   <br>

   

      <% if @track.music.persisted? %>
      


      <%= audio_tag(polymorphic_path(@track.music), controls: true, class:"audio_player"  ) %>

      

   

      <% end%>
             <br>
          <p><%=@track.lyrics%></p>

          
          

          

      </div>
      <% if track_view %>
      <div class="buttons">

            <a class="band_index" href="<%= edit_track_url %>">Edit Track</a>
          <br>
              <a class="band_index" href="<%= track_confirm_url(@track) %>">Delete Track </a> 
     

     </div>  
     <% end%>


</div>
         
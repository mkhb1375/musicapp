
<style>




.back_after:before{
  
  background-size:content;
  background-repeat: no-repeat;
}
</style>

<% if @cover%>

<% temp =  @height%>
<% temp = 500 / temp%>

<style>

.back_after:before{

 background-image:url("<%= @cover %>");

  filter: blur(<%= temp %>px);
  -webkit-filter: blur(<%= temp %>px);
}
.pages:before{
    background-size:cover;
     background-repeat:repeat-y;
     filter: blur(9px);
  -webkit-filter: blur(9px);
  background-image:url("<%= @cover %>");
}

</style>
<% end%>

<div class="pages">
<div class="back_after">
    <div class="band_index">
    <div class="links">

            <a href="<%= bands_url %>">Bands</a>
            / 
            <a href="<%= band_url(@band.id) %>"><%= @band.name%></a>
            / 
            <a href="<%= band_album_url(@albums.id) %>"><%=@albums.title%></a>
            <br>
            </div>
            <ul class="band_index" >
            
            <% @albums.tracks.each do |track|%>
            <li class="band_index" ><a href="<%=track_url(track.id)%>"> <%=track.ord.to_s %> - <%=track.title%> </a></li>
            <br>
            <% end%>
            </ul>

       

      </div>
    

    <% if album_view%>
       <div class="buttons">

            <a class="band_index" href="<%= new_band_album_track_url(@albums) %>">Add Track</a>
                <br>

            <a class="band_index" href="<%= edit_band_album_url %>">Edit Album</a>
                <br>
            
     <a class="band_index" href="<%= band_album_confirm_url(@albums) %>">Delete Album </a>
    <% end%>

         </div>  
  </div>
</div>
                    
                    